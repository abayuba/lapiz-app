    <splash src="res/android/splash/drawable-port-xxxhdpi-screen.png" density="port-xxxhdpi"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <platform name="android">
    <preference name="loadUrlTimeoutValue" value="20000"/>
    <preference name="ErrorUrl" value="retry.html"/>
    <preference name="LoadingDialog" value="Start...,Please wait..."/>
  </platform>
  <platform name="ios">
    <preference name="ErrorUrl" value="Application Error"/>
  </platform>
	<splash src="splash.png" />
